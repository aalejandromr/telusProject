{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}Login{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div id="login-logo">

    </div>
    <div class="jarviswidget login">
        <header>
            <h2>Login</h2>
        </header>

        <div class="widget alert alert-info adjusted">
            <i class="cus-exclamation"></i>
            <strong>Please type in your username and password.</strong>
        </div>
        {% if error %}
            <div class="widget alert adjusted alert-error">
                <button class="close" data-dismiss="alert">Ã—</button>
                <i class="cus-cross-octagon"></i>
                <strong>Error!</strong> {{ error  }} {#error.messageKey|trans(error.messageData, 'security')#}
            </div>
        {% endif %}
        <!-- content goes here -->
        <div id="main-content">
            <form class="form-signin" id="target" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="control-group">
                    <input type="text" class="input-block-level" autofocus placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="control-group">
                    <input type="password" class="input-block-level" id="password" name="_password" required="required" />
                </div>

                <div class="control-group no-border">
                    <div style="text-align: right;">
                        <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Sign in" />
                    </div>
                </div>                      

            </form>

        </div>
        <!-- end content goes here -->

    </div>

{% endblock fos_user_content %}
